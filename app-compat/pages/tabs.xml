<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:actionBar="/action-bar"
      navigatingTo="navigatingTo">
    <actionBar:action-bar actionBarTitle="Tabs and BottomNavigation"/>
    <Tabs>
        <TabStrip>
            <TabStripItem title="First"/>
            <TabStripItem title="Second"/>
        </TabStrip>

        <TabContentItem>
            <TextView text="{{ tab1 }}" class="p-20" editable="false"/>
        </TabContentItem>

        <TabContentItem>
            <TextView text="{{ tab2 }}" class="p-20" editable="false"/>
        </TabContentItem>
    </Tabs>
</Page>
