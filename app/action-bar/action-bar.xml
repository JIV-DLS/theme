<ActionBar title="{{ title }}" loaded="onLoad" xmlns:ui="nativescript-theme-widgets">
    <android>
        <NavigationButton icon="{{ backButton ? 'res://chevron_left' : 'res://menu' }}"
                          tap="{{ backButton ? goBack : toggleSideDrawer }}" />
    </android>
    <ios>
        <ActionItem position="left" visibility=" backButton ? 'collapsed' : 'visible' ">
            <ui:NTIcon tap="{{ toggleSideDrawer }}" name="bars" />
        </ActionItem>
        <ActionItem position="left" visibility=" backButton ? 'visible' : 'collapsed' ">
            <ui:NTIcon tap="{{ goBack }}" name="chevron-left" />
        </ActionItem>
    </ios>
    <ActionItem tap="{{ toggleRightDrawer }}" ios.position="right">
        <Button text="Theme" />
    </ActionItem>
</ActionBar>


