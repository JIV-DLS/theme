<ActionBar class="action-bar" loaded="onLoad" xmlns:ui="nativescript-theme-core" >
	<!--<android:NavigationButton text="go back" icon="~/actionBar/ic_menu_black.png" tap="{{ toggleSideDrawer }}" />-->
	<Android>
		<!--<NavigationButton text="{{"fa-bars" | fonticon }}" tap="{{ toggleSideDrawer }}" />-->
		<GridLayout rows="auto" columns="50,*,auto">
			<ui:ThemeIcon tap="{{ toggleSideDrawer }}" name="bars" class="action-item text-left" row="0" col="0" />
			<StackLayout verticalAlignment="center" row="0" col="1">
				<Label id="actionBarTitle" class="action-bar-title"/>
			</StackLayout>
			<Button tap="{{ openModal }}" text="Modal" row="0" col="2" class="action-item" />
		</GridLayout>
	</Android>

	<iOS>
		<ActionBar.actionItems>
			<ActionBar.titleView>
				<StackLayout class="action-bar-title">
					<Label id="actionBarTitle"/>
				</StackLayout>
			</ActionBar.titleView>
			<ActionItem position="left">
				<ActionItem.actionView>
					<ui:ThemeIcon tap="{{ toggleSideDrawer }}" name="bars" class="action-item"/>
				</ActionItem.actionView>
			</ActionItem>
			<ActionItem tap="{{ openModal }}" text="Modal" class="action-item" ios.position="right" />
		</ActionBar.actionItems>
	</iOS>
</ActionBar>
