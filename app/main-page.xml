<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <StackLayout class="action-title">
        <Label text="NativeScript Themes"/>
      </StackLayout>
      <ActionBar.actionItems>
        <ActionItem>
          <ActionItem.actionView>
            <Button text="Left" class="action-item btn" />
          </ActionItem.actionView>
        </ActionItem>
        <ActionItem ios.position="right">
          <ActionItem.actionView>
            <Button text="Right" class="action-item btn" />
          </ActionItem.actionView>
        </ActionItem>
      </ActionBar.actionItems>
    </ActionBar>
  </Page.actionBar>
  <ScrollView>
    <StackLayout class="main-page">
      <Button text="Basics" tap="{{ viewBasics }}" class="btn" />
      <Button text="Buttons" tap="{{ viewButtons }}" class="btn" />
      <Button text="Forms" tap="{{ viewForms }}" class="btn" />
      <Button text="Searchbars" tap="{{ viewSearch }}" class="btn" />
      <Button text="Sliders" tap="{{ viewSliders }}" class="btn" />
      <Button text="Switches" tap="{{ viewSwitches }}" class="btn" />
      <Button text="Progress & Activity" tap="{{ viewProgress }}" class="btn" />
      <Button text="Tabs" tap="{{ viewTabs }}" class="btn" />
      <Button text="SegmentedBar" tap="{{ viewSegmentBar }}" class="btn" />
      <Button text="Dialogs" tap="{{ viewDialogs }}" class="btn"/>
      <Button text="ListView" tap="{{ viewListView }}" class="btn" />
      <Button text="SideDrawer" tap="{{ viewSideDrawer }}" class="btn" />
      <Button text="Themes" tap="{{ viewThemes }}" class="btn" />

    </StackLayout>

  </ScrollView>
</Page>