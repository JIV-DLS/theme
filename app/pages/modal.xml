<ui:NTModalPage xmlns="http://www.nativescript.org/tns.xsd" xmlns:ui="nativescript-theme-widgets">
    <ui:NTCustomActionBar title="{{ title }}">
        <ActionItem tap="{{ close }}" ios.position="right">
            <Button text="Close"></Button>
        </ActionItem>
    </ui:NTCustomActionBar>

    <StackLayout>
        <StackLayout class="hr-light"/>

        <StackLayout class="p-20">
            <Label text="A modal with a real action bar (within a Frame)." class="h2" textWrap="true"/>
        </StackLayout>
    </StackLayout>
</ui:NTModalPage>
