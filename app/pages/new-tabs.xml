<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:actionBar="/action-bar"
      navigatingTo="navigatingTo">
    <actionBar:action-bar actionBarTitle="Tabs and BottomNavigation"/>
    <GridLayout rows="*, *">
        <Tabs>
          <TabStrip>
            <TabStripItem title="First" />
            <TabStripItem title="Second" />
          </TabStrip>

          <TabContentItem>
              <TextView text="{{ tab1 }}" editable="false" />
          </TabContentItem>

          <TabContentItem>
              <TextView text="{{ tab2 }}" editable="false" />
          </TabContentItem>
        </Tabs>

        <BottomNavigation row="1">
            <TabStrip>
                <TabStripItem title="Tab 1" />
                <TabStripItem title="Tab 2" />
            </TabStrip>

            <TabContentItem>
                <TextView text="{{ tab3 }}" editable="false" />
            </TabContentItem>

            <TabContentItem>
                <Image src="{{ image1 }}" width="100%" height="100%" stretch="aspectFill" />
            </TabContentItem>
        </BottomNavigation>
    </GridLayout>
</Page>
